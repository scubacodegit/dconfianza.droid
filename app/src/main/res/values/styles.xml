<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/ButtonBackGround</item>
        <item name="colorControlHighlight">@color/ButtonBackGround</item>
        <item name="android:textColor">@color/LabelColor</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/editTextColorWhite</item>
        <item name="android:textSize">@dimen/edittext_textsize_login</item>
        <item name="android:textColorPrimary">@color/editTextColorWhite</item>
        <item name="colorAccent">@color/editTextColorWhite</item>
        <item name="colorControlNormal">@color/editTextColorWhite</item>
        <item name="colorControlActivated">@color/editTextColorWhite</item>
        <item name="android:textColorHighlight">@color/textColorHighlight</item>
        <item name="android:textColorLink">@color/textColorLink</item>
    </style>

    <style name="InputLayoutError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/inputLayoutError</item>
    </style>

    <style name="label2_style" >
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/LabelColor</item>
    </style>

    <style name="editInput" parent="@android:style/TextAppearance.Small">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <!--<item name="android:background">@drawable/edittext_background</item>-->
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SignUpLabelStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorLink">#FFFFFF</item>
        <item name="buttonTint">#FFFFFF</item>

    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/LabelColor</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/LabelColor</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorSecondary">@color/ToolBarHamburgerColor</item>
    </style>

    <style name="LabelOnCardStyle" parent="AppTheme">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DataOnCardStyle" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DataOnCardNoMarginStyle" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="LabelOnWorkerProfileActivity" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/LabelColor</item>
    </style>

    <style name="ValueOnWorkerProfileActivity" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

</resources>
